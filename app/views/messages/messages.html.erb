<!DOCTYPE html>
<html>
   <body>
      <div class="container main">
         <h1>Messages</h1>
         <form class="form-horizontal col-lg-8 col-lg-offset-2">
            <label for="title">New Messages</label> 
            <div class="form-group" style="overflow-y: scroll; height: 300px; border: 1px solid;">
               <div class="table-responsive">
                  <table class="table table-striped table-bordered">
                     <tbody>
                        <% @messages.each do |message|%>
                           <% if not message.viewed then %>
                              <tr>
                                 <td class="listinfo"><%=message.listing_title%></td>
                                 <td class="listinfo"><%=message.text%></td>
                              </tr>
                           <% end %>
                        <% end %>
                     </tbody>
                  </table>
               </div>
            </div>
            <label for="title">Viewed Messages</label> 
            <div class="form-group" style="overflow-y: scroll; height: 300px; border: 2px solid;">
               <% @messages.each do |message|%>
               <% if message.viewed then %>
               <h3> <%= message.text %> <%= message.viewed %> </h3>
               <% end %>
               <% end %>
            </div>
         </form>
      </div>
   </body>
</html>
